<Window x:Class="MHR_Editor.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Name="this"
        Title="MainWindow"
        Width="1800"
        Height="500"
        DataContext="{x:Reference this}"
        WindowStartupLocation="CenterScreen">
    <Grid Name="main_grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0"
                   Grid.Column="0"
                   VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Button Name="btn_open"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        Click="Btn_open_Click"
                        Content="Open"/>
                <xctk:SplitButton Name="btn_save"
                                  Margin="8,0,0,0"
                                  HorizontalAlignment="Left"
                                  Click="Btn_save_Click"
                                  Content="Save (Ctrl+S)">
                    <xctk:SplitButton.DropDownContent>
                        <StackPanel Orientation="Vertical">
                            <Button Name="btn_save_as"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Left"
                                    Click="Btn_save_as_Click"
                                    Content="Save As (Ctrl+Shift+S)"/>
                        </StackPanel>
                    </xctk:SplitButton.DropDownContent>
                </xctk:SplitButton>
                <TextBlock Name="lbl_saved"
                           Margin="8,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="—Saved"
                           Visibility="Collapsed"/>
                <TextBlock Name="lbl_no_changes"
                           Margin="8,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="—No Changes to Save"
                           Visibility="Collapsed"/>
            </StackPanel>
        </DockPanel>
        <DockPanel Grid.Row="0"
                   Grid.Column="1"
                   VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <CheckBox Name="cb_single_click_edit"
                          Margin="8,0,0,0"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Content="Single Click to Edit Mode"
                          IsChecked="{Binding SingleClickToEditMode}"/>
                <CheckBox Name="cb_show_id_before_name"
                          Margin="8,0,0,0"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Content="Show Id Before Name"
                          IsChecked="{Binding ShowIdBeforeName}"/>
            </StackPanel>
        </DockPanel>
        <DockPanel Grid.Row="0"
                   Grid.Column="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Button Name="btn_cheat"
                        Margin="8,0,0,0"
                        HorizontalAlignment="Right"
                        Click="Btn_test_Click"
                        Content="Test"/>
                <Button Name="btn_open_wiki"
                        Margin="8,0,0,0"
                        HorizontalAlignment="Right"
                        Click="Btn_open_wiki_OnClick"
                        Content="Wiki"/>
            </StackPanel>
        </DockPanel>
        <ScrollViewer Name="scroll_viewer"
                      Grid.Row="1"
                      Grid.Column="0"
                      Grid.ColumnSpan="3"
                      HorizontalScrollBarVisibility="Auto"
                      IsDeferredScrollingEnabled="True"
                      PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <Grid Name="sub_grids"/>
        </ScrollViewer>
    </Grid>
</Window>